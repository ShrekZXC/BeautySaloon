@model BeautySaloon.ViewModel.UserViewModel

@{
    Layout = null;
}
<html lang="ru">

@Html.Partial("_AdminHeadPartial")

@Html.Partial("_HeaderPartial")

<body>
<div class="container mt-5">
    <h2>Редактирование пользователя</h2>
    <form id="editUserForm" method="post" action=@Url.Action("UpdateUser","AdminUser")>
        <div class="form-group">
            <label for="id">ID</label>
            <input type="text" class="form-control" id="id" name="id" readonly value="@Model.Id">
        </div>
        <div class="form-group">
            <label for="FirstName">Имя</label>
            <input type="text" class="form-control" id="FirstName" name="FirstName" required value="@Model.FirstName">
        </div>
        <div class="form-group">
            <label for="SecondName">Фамилия</label>
            <input type="text" class="form-control" id="SecondName" name="SecondName" required value="@Model.SecondName">
        </div>
        <div class="form-group">
            <label for="LastName">Отчество</label>
            <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName">
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" required value="@Model.Email">
        </div>
        <div class="form-group">
            <label for="Phone">Телефон</label>
            <input type="tel" class="form-control" id="Phone" name="Phone" value="@Model.Phone">
        </div>
        <div class="form-group">
            <label for="RoleId">Роль</label>
            <select class="form-control" id="RoleId" name="RoleId">
                <option value="425abb27-6970-41dc-8e54-ae8ffe3c3e0e" selected="@(Model.RoleId == new Guid("425abb27-6970-41dc-8e54-ae8ffe3c3e0e") ? "selected" : null)">Пользователь</option>
                <option value="0561523a-38b5-4376-8cb3-a13da891e364" selected="@(Model.RoleId == new Guid("0561523a-38b5-4376-8cb3-a13da891e364") ? "selected" : null)">Работник</option>
                <option value="8c1e6b9f-7c66-4594-8f81-a5dffce769de" selected="@(Model.RoleId == new Guid("8c1e6b9f-7c66-4594-8f81-a5dffce769de") ? "selected" : null)">Админ</option>
            </select>
        </div>
        <input type="hidden" name="Password" value="@Model.Password" />
        <input type="hidden" name="Salt" value="@Model.Salt" />
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </form>
</div>
</body>