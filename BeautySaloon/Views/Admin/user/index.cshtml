@model List<BeautySaloon.ViewModel.UserViewModel>

@{
    Layout = null;
}
<html lang="ru">

@Html.Partial("_AdminHeadPartial")

@Html.Partial("_HeaderPartial")

<body>
<div class="container">
<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Имя</th>
        <th scope="col">Фамилия</th>
        <th scope="col">Отчество</th>
        <th scope="col">Почта</th>
        <th scope="col">Телефон</th>
        <th scope="col">Роль</th>
        <th scope="col">Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.FirstName</td>
            <td>@user.SecondName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@user.Phone</td>
            <td>@user.Role.Role</td>
            <td>
                <button class="btn btn-primary" onclick="location.href='@Url.Action("UpdateUser", "AdminUser", new {id = user.Id})'">Редактировать</button>
                <button class="btn btn-danger" onclick="deleteUser('@user.Id')">Удалить</button>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>
</body>

<script>
    function editUser(id) {
        window.location.href = 'user/update?id=' + id;
    }

    function deleteUser(id) {
        if (confirm('Вы уверены, что хотите удалить этого пользователя?')) {
            window.location.href = '/user/delete/' + id;
        }
    }

    function addUser() {
        window.location.href = '/users/create';
    }
</script>