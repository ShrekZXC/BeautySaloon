@model List<BeautySaloon.ViewModel.WorkerViewModel>

@{
Layout = null;
}
<html lang="ru">

@await Html.PartialAsync("Admin/_AdminHeadPartial")

@await Html.PartialAsync("Admin/_AdminHeaderPartial")

<body>
<div class="container">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th scope="col" class="text-center">Id</th>
            <th scope="col" class="text-center">Мастер</th>
            <th scope="col" class="text-center" style="width: 150px;">Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var worker in Model)
        {
        <tr>
            <td class="text-center">@worker.Id</td>
            <td class="text-center">@worker.SecondName @worker.FirstName @worker.LastName</td>
            <td class="text-center">
                <form action="@Url.Action("SetUpSchedule", "AdminSchedule")" method="post" class="d-flex flex-column">
                    <input type="hidden" name="workerId" value="@worker.Id" />
                    <button type="submit" class="btn btn-primary mb-2 btn-custom">Настроить расписание</button>
                </form>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>
