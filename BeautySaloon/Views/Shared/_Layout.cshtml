<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    
    <title>@ViewData["Title"] - BeautySaloon</title>
    
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>

<body>
<nav class="sidebar close">
    <header>
        <div class="image-text">
            <span class="image">
                <img src="img\logo.png" alt="logo">
            </span>

            <div class="text header-text">
                <span class="name">Салон красоты</span>
                <span class="profession">Алеся Ковыряева</span>
            </div>
        </div>
                
        <i class='bx bx-chevron-right toggle'></i>
    </header>
    
    <div class="menu-bar">
        <div class="menu">
            <li class="search-box">
                <i class='bx bx-search icon' ></i>
                <input type="text" placeholder="Поиск..."/>
            </li>
            <ul class="menu-links">
                <li class="nav-link">
                    <a href="@Url.Action("Index", "Home")">
                        <i class='bx bx-home-alt icon'></i>
                        <span class="text nav-text">Главная</span>
                    </a>
                </li>
                <li class="nav-link">
                    <a href="@Url.Action("Index", "Services")">
                        <i class='bx bx-shopping-bag icon'></i>
                        <span class="text nav-text">Услуги</span>
                    </a>
                </li>
                <li class="nav-link">
                    <a href="@Url.Action("Index", "Promo")">
                        <i class='bx bx-bell icon'></i>
                        <span class="text nav-text">Акции</span>
                    </a>
                </li>
                <li class="nav-link">
                    <a href="@Url.Action("Index", "About")">
                        <i class='bx bx-group icon'></i>
                        <span class="text nav-text">О нас</span>
                    </a>
                </li>
                <li class="nav-link">
                    <a href="@Url.Action("Index", "Contact")">
                        <i class='bx bx-user-pin icon' ></i>
                        <span class="text nav-text">Контакты</span>
                    </a>
                </li>
                <li class="nav-link">
                    <a href="@Url.Action("Index","License")">
                        <i class='bx bx-registered icon'></i>
                        <span class="text nav-text">Лицензии</span>
                    </a>
                </li>
            </ul>
        </div>
        
        <div class="bottom-content">
            
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-link">
                        <a href="#">
                            <i class='bx bx-user icon' ></i>
                            <span class="text nav-text">@User.Identity.Name</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a href="@Url.Action("Logout", "Account")">
                            <i class='bx bx-log-out icon'></i>
                            <span class="text nav-text">Выйти</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-link">
                        <a href="@Url.Action("Login", "Account")">
                            <i class='bx bx-log-in icon'></i>
                            <span class="text nav-text">Войти</span>
                        </a>
                    </li>
                }
            
            <li class="mode">
                <div class="moon-sun">
                    <i class="bx bx-moon icon moon"></i>
                    <i class="bx bx-sun icon sun"></i>
                </div>
                <span class="mode-text text">Ночь</span>

                <div class="toggle-switch">
                    <span class="switch"></span>
                </div>
            </li>
        </div>
    </div>

</nav>

<section class="home">
<main>
            @RenderBody()
        </main>
</section>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>