@model BeautySaloon.ViewModel.ProfileViewModel

@{
    ViewData["Title"] = "Contact page";
    var role = User.IsInRole("Client") ? "Client" :"Worker";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-4">
                @if (role == "User")
                {
                    @:Профиль клиента
                }
                else
                {
                    @:Профиль мастера
                }
            </h2>
            <div class="mb-3">
                <label class="font-weight-bold">Имя:</label>
                <span>@Model.FirstName</span>
            </div>
            <div class="mb-3">
                <label class="font-weight-bold">Фамилия:</label>
                <span>@Model.SecondName</span>
            </div>
            <div class="mb-3">
                <label class="font-weight-bold">Отчество:</label>
                <span>@Model.LastName</span>
            </div>
            <div class="mb-3">
                <label class="font-weight-bold">Email:</label>
                <span>@Model.Email</span>
            </div>
            <div class="mb-3">
                <label class="font-weight-bold">Телефон:</label>
                <span>@Model.PhoneNumber</span>
            </div>
            <button class="btn btn-primary">Изменить данные</button>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Записи пользователя</h2>
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                <tr>
                    <th scope="col" class="text-center">Услуга</th>
                    @if (role == "User")
                    {
                        <th scope="col" class="text-center">Мастер</th>
                    }
                    <th scope="col" class="text-center">Дата</th>
                    <th scope="col" class="text-center">Начало</th>
                    <th scope="col" class="text-center">Конец</th>
                    <th scope="col" class="text-center">Действие</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var appointment in Model.Appointments)
                {
                <tr>
                    <td class="text-center">@appointment.Service.Name</td>
                    @if (role == "User")
                    {
                        <td class="text-center">@appointment.Worker.FirstName @appointment.Worker.LastName</td>
                    }
                    <td class="text-center">@appointment.WorkDate.Date.ToString("d")</td>
                    <td class="text-center">@appointment.StartTime.ToString("g")</td>
                    <td class="text-center">@appointment.EndTime.ToString("g")</td>
                    <td class="text-center">
                        <button class="btn btn-danger btn-sm">Отменить</button>
                    </td>
                </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
